.container
.all-groups-strip
  .container
    .row
      .span12.groups-header
        =link_to(groups_path) do
          =image_tag('groups-logo.png', :class=>'groups-logo-header')
          %h4.groups-title
            Groups
            %small
              View all groups
-if @group
  .container
    .row.mb-2.mt-3
      .span7
        %h1.page-title.mb-3.mt-0
          =@group.name
        =simple_format(@group.description)
      .span5
        =image_for(@group, '370x250#')
    .row
      .span12
        =render('groups/nav')