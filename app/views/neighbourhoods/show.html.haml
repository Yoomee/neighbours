-title "My Neighbourhood"
.row
  .span12.fade_in
    #home-map
      .you-are-in
        %p
          You are in 
          %select
            %option Maltby
            %option Other areas coming soon!
.row                                         
  .span6
    %h2 Neighbours who've been helped
    %ul.help-list.unstyled
      -@helped.each do |need|
        %li.list
          .list-image
            =link_to need do
              =image_for(need.user, "60x50#")
              %p.small-text
                =need.user
          .list-text
            %h3
              =link_to need.title, need
            %p
              -if current_user.validated?
                =need.description
              -else
                =need.category.description

    =link_to "I'd like some help", new_need_path, :class=>"btn call-to-action primary"
                            
  .span6
    %h2 Neighbours who need help
    %ul.help-list.unstyled
      -@need_help.each do |need|
        %li.list
          .list-image
            =link_to need do
              =image_for(need.user, "60x50#")
              %p.small-text
                =need.user
          .list-text
            %h3
              =link_to need.title, need
            %p
              -if current_user.validated?
                =need.description
              -else
                =need.category.description

    =link_to "I'd like to offer some help", needs_path, :class=>"btn call-to-action"    