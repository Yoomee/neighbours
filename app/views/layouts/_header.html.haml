.container#header
  .row#header-row
    .span5
      %h1#site_logo
        =link_to "Neighbours Can Help", "/"
    .span7
      #header-links        
        -if current_user
          .btn-group
            =link_to(current_user, :class => 'btn') do
              %icon.icon-user
              =current_user
            =link_to('#', :data => {:toggle => "dropdown"}, :class => 'btn dropdown-toggle') do
              %span.caret
            %ul.dropdown-menu.pull-right
              -if current_user.is_admin?
                %li
                  =link_to(admin_path) do
                    %icon.icon-cogs
                    Admin
                %li.divider
              %li
                =link_to(edit_user_path(current_user)) do
                  %icon.icon-cog
                  Edit profile
              %li
                =link_to(change_password_path) do
                  %icon.icon-key
                  Change password
              %li
                =link_to(sign_out_path, :method => :delete) do
                  %icon.icon-signout
                  =t(:logout)
        -else
          =link_to "Login", sign_in_path, :class=>"nav-link btn"
.nav-strip  
  .container                
    .row
      .span12              
        #nav.main-nav
          %ul.nav.nav-tabs
            =li_with_active(current_page?(root_path), link_to("Home", root_path, :class=>"nav-link"))
            =li_with_active(@page && @page.slug == "about", link_to_slug(:about, :class=>"nav-link"))
            =li_with_active(@page && @page.slug == "stories", link_to_slug(:stories, :class=>"nav-link"))
            -if current_user
              =li_with_active(controller_name.neighbourhoods?, link_to("My Neighbourhood", neighbourhood_path, :class=>"nav-link"))
          
-if show_control_panel?
  .container
    .row
      #control-panel.span12
        .row
          .span2.offset1
            =link_to root_path, :id=>"big-home-icon" do
              %i.icon-home
          .span3    
            %h3.control-panel-title
              Account status
            %p.control-panel-subtitle
              -if current_user.validated?
                Validated
              -else
                Not validated
          .span3
            =link_to user_needs_path(current_user), :class=>"control-panel-link" do
              %h3.control-panel-title
                My requests
              %p.control-panel-subtitle
                %span.badge.badge-info 12
                Messages
          .span3
            =link_to offers_path, :class=>"control-panel-link" do
              %h3.control-panel-title
                My offers
              %p.control-panel-subtitle
                %span.badge.badge-info 9
                Messages
  
  
          