!!!5
%html
  %head
    %title
      =Settings.site_name
      ="- #{@page_title}" if @page_title.present?
    =stylesheet_link_tag("application")
    <!--[if IE 6]>
    =stylesheet_link_tag("ie6")
    <![endif]-->
    =javascript_include_tag("application")
    =csrf_meta_tags
    =yield :head
    =google_analytics_js
  -if current_user.nil?
    =render('layouts/logged_out/body')
  -else
    =render('layouts/logged_in/body')