.comment{:class => "#{!comment.read_by?(current_user) ? 'unread' : ''}"}
  =link_to_with_tooltip(can?(:read,comment.user) ? comment.user : '#', :class => "comment-image") do
    =image_for_with_validation(comment.user, "32x32#")
  .comment-text
    %b=comment.user
    =comment.text
    .small-info-text
      =time_ago_in_words(comment.created_at) + " ago (#{comment.created_at.strftime("%d/%m/%y")})"