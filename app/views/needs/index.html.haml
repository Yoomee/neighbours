.row
  .help-box.span8.offset2
    %h1=title "People who need help"
    
    %ul.help-list.unstyled
      -@needs.order('created_at DESC').each do |need|
        %li.list.list-result
          .list-image
            =link_to need.user do
              =image_for(need.user, "60x50#")
              %p.small-text=need.user
          .list-text
            %h3
              =link_to_self(need)
            =simple_format(need.description)
          =link_to "I can help", need, :class=>"btn i-can-help-btn"
    .clearfix
    .help-well.well
      %h2.help-title I can help with
      %input.can-help-input{:type=>"text", :title => "Search...", :placeholder=>"e.g. Gardening"}

