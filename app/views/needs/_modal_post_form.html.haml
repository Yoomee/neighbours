-post ||= need.posts.build
=semantic_form_for(post, :remote => true) do |form|
  =hidden_field_tag :return_to, need_path(need)
  =form.hidden_field :target_type
  =form.hidden_field :target_id
  .modal-header
    %button.close{:type => "button", :'data-dismiss' => "modal" } &times;
    %h3 Offer to help
  .modal-body
    =form.input :text, :input_html => {:class => "span6", :rows => 5}, :label => "Add a message", :required => false
  .modal-footer
    =form.commit_button "Send", :button_html => {:class => "btn-primary"}