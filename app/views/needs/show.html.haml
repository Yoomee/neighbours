.row
  .span10.offset2
    %ul.pager.mb-2
      %li
        -if @need.user == current_user
          =link_to "&uarr; My requests".html_safe, user_needs_path(current_user)
        -else
          =link_to "&uarr; All requests".html_safe,  needs_path
  .span2
    =link_to @need.user, :class => "user-thumbnail-large" do
      =image_for(@need.user, "120x120#")
      %p=@need.user
  .span8
    .request-body.mb2
      %h1=title @need.title
      =simple_format(@need.description)
      
      
#request-activity.row
  .span6.offset1
    -if @need.user != current_user
      =link_to "I can help", "#offer-form", :'data-toggle' => "modal",  :class => "btn btn-primary mb-2"
    %ul.unstyled
      -@offers.each do |offer|
        %li.post
          .row
            .span1
              .list-image
                =link_to offer.user do
                  =image_for(offer.user, "60x60#")
                  %p.small-text
                    =offer.user
            .span4
              .post-speech=simple_format(offer.text)
              .post-actions
                -if @need.user == current_user
                  =link_to "#", :class=>"post-action" do
                    %i.icon-comment
                    Reply
                  -if offer.accepted?
                    %span.badge.badge-success Accepted 
                  -elsif @need.accepted_offer.nil?
                    =link_to accept_offer_path(offer), :class=>"post-action" do
                      %i.icon-ok
                      Accept this offer
  .span4
    -if @offers.present?
      %h3.mb1 People offering help
      %ul.thumbnails
        -@offers.each do |offer|
          %li.span1
            =link_to offer.user, :class=>"thumbnail" do
              =image_for(offer.user, "60x60#")

-if @need.user != current_user            
  .row
    .span12
      #offer-form.modal.hide.fade
        =render('offers/modal_form')