.row
  .span8.offset2
    %h1 My offers    
    -if @offers.empty?
      Your haven't offered to help anyone yet. Click 
      =link_to("here",needs_path)
      to see who you could help.
    -else
      %ul.nav.nav-tabs.nav-stacked
        -@offers.order("created_at DESC").each do |offer|
          %li
            =link_to offer.need do
              .list-image{:'data-tooltip' => 'tooltip', :title => (offer.need.user.street_name if current_user.try(:validated?))}
                =image_for_with_validation(offer.need.user, "60x50#")
                %p.small-text=offer.need.user
              %h3=offer.need.title
              %p
                =messages_badge(current_user.new_notification_count("my_offers", offer.need))
.row
  .span6.offset2                  
    =link_to "Find someone who needs your help", needs_path, :class=>"btn call-to-action"    

