.span6
  .well
    %h3.mb1
      If you can't find anyone offering help, post your request below
    .need-offer-form
      :plain
        <fieldset class="inputs"> 
          <div class="text control-group optional" id="need_description_input"><div class="controls"><textarea class="span5" data-validate="true" id="need_description" name="need[description]" rows="6"></textarea>

        <i class="icon-question-sign help-icon" data-original-title="Describe what you need help with. Be sure to include when you need the help and how flexible you can be."></i></div></div>
          <div class="select control-group optional" id="need_radius_input"><label class=" control-label" for="need_radius">Broadcast radius</label><div class="controls"><select class="span5" id="need_radius" name="need[radius]"><option value="402">1/4 mile</option>
          <option value="805">1/2 mile</option>
          <option value="1609" selected="selected">1 mile</option>
          <option value="3219">2 miles</option>
          <option value="8047">5 miles</option>
          <option value="16093">10 miles</option></select>

          <i class="icon-question-sign help-icon" data-original-title="People who live within this distance from you will hear about your need"></i></div></div>
          <div class="radio control-group optional" id="need_need_to_know_by_input"><label class=" control-label">I need to know by</label><div class="choices controls"><label class="choice radio" for="need_need_to_know_by_anytime"><input checked="checked" id="need_need_to_know_by_anytime" name="need[need_to_know_by]" type="radio" value="anytime">Any time</label>
          <label class="choice radio" for="need_need_to_know_by_asap"><input id="need_need_to_know_by_asap" name="need[need_to_know_by]" type="radio" value="asap">As soon as possible</label>
          <label class="choice radio" for="need_need_to_know_by_date"><input id="need_need_to_know_by_date" name="need[need_to_know_by]" type="radio" value="date">A specific date</label>
        </fieldset>
      =link_to "Send help request", "/wireframes/need3", :class=>"btn btn-primary mt1"    

  
